# .kshell_profile
# modified from my standard .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

#Some handy variables
SHELLUSR=`cat ./config/username`
#TEHYUORPC=`cat ./config/tehyuorpc`
DOMAIN='arsc.edu'
CONFIGFILE='./config/ssh_config'
export SHELLUSR
#export TEHYUORPC
export DOMAIN
export CONFIGFILE

# adds special krb5 and ossh paths
PATH=$PATH:./krb5/bin/:./ossh/bin/
export PATH

#add handy aliases
alias kinit="kinit $SHELLUSR@`echo $DOMAIN | tr [:lower:] [:upper:]`"
alias ssh="ssh -XY -F $CONFIGFILE"

